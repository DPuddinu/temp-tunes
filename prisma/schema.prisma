// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                String             @id @default(cuid())
  name              String?
  email             String?            @unique
  image             String?
  type              UserType
  playlistTemplates PlaylistTemplate[]
  Tags              Tag[]
}
enum UserType {
  ADMIN
  USER
}

model PlaylistTemplate {
  id              String          @id @default(cuid())
  userId          String
  name            String
  description     String?
  color           String?
  type            TemplateType
  templateEntries TemplateEntry[]
  author          User            @relation(fields: [userId], references: [id])

  @@index([userId])
}

enum TemplateType {
  CUSTOM
  EXPLORE
}

model TemplateEntry {
  id               String           @id @default(cuid())
  templateId       String
  playlistTemplate PlaylistTemplate @relation(fields: [templateId], references: [id])
  entry            String

  @@index([templateId])
}

model Tag {
  id        String @id @default(cuid())
  name      String
  userId    String
  spotifyId String
  user      User   @relation(fields: [userId], references: [id])

  @@index([userId])
}
